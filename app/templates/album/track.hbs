<style>

    #searchDiv {
        display: none;
    }
    .overlay {
        position: fixed;
        background: rgba(100, 100, 100, 0.75);
        width: 100%;
        top: 0%;
        bottom: 0%;
        right: 0%;
        left: 0%;
        cursor: pointer;
        z-index: 1;
    }
    .container {
        background: white;
        position: fixed;
        top: 10%;
        left: 10%;
        width: 80%;
        height: 80%;
        z-index: 2;
        box-shadow: 0px 0px 20px 3px #00000030;
    }
    .header {
        background: tomato;
        position: relative;
        display: block;
        padding: 20px;
        color: white;
        font-size: large;
    }
    .artist-info p {
        display: inline-block;
        margin: 10px;
    }
    .pills-container {
        position: absolute;
        border: 2px solid tomato;
        top: 100px;
        left: 20px;
        right: 20px;
        bottom: 20px;
        padding: 10px;
        overflow: scroll;
    }
    .pill {
        padding: 10px;
    }
    .pill:hover {
        background: floralwhite;
    }
    @media screen and (max-width: 768px) {
        .artist-info {
            font-size: calc(1rem - 25%);
        }
        .pill {
            font-size: calc(1rem - 10%);
            line-height: 1.2rem;
        }
    }
</style>

    <div class="container">
        <span class="header">
            <span>Track Listing</span>
            <span style="cursor: pointer; position: absolute; right: 3%;" {{action "closePopup"}} title="Close Modal">
                &times;
            </span>
        </span>
        <div class="artist-info">
            <p style="float: left;">Artist Name: <span style="color: tomato">{{albumArtist}}</span></p>
            <p style="float: right;">Release Date: <span style="color: tomato">{{albumReleased}}</span></p>
        </div>
        <br><br>
        <div class="pills-container">
            {{#each tracks as |track|}}
                <div class="pill">
                    <span style="display: inline-block">
                        <span>{{track.trackName}}</span>
                        <span>({{track.trackDuration}})</span>
                    </span>
                </div>
            {{/each}}
        </div>
    </div>
<div class="overlay" {{action "closePopup"}}></div>